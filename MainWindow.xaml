<Window x:Class="GroceryGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceryGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <MenuItem Name="File" Header="_File">
                    <MenuItem Name="Open" Header="_Open"/>
                    <MenuItem Name="Save" Header="_Save"/>
                    <MenuItem Name="Exit" Header="_Exit"/>
                </MenuItem>
                <MenuItem Name="View" Header="_View">
                    <MenuItem Name="Zoom" Header="_Zoom"/>
                </MenuItem>
            </Menu>
            <Grid x:Name="WindowGrid" DockPanel.Dock="Right" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom">Date</TextBlock>

                <!--Item Labels-->
                <TextBox Grid.Row="1" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #1</TextBox>
                <TextBox Grid.Row="2" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #2</TextBox>
                <TextBox Grid.Row="3" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #3</TextBox>
                <TextBox Grid.Row="4" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #4</TextBox>
                <TextBox Grid.Row="5" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #5</TextBox>
                <TextBox Grid.Row="6" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #6</TextBox>
                <TextBox Grid.Row="7" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=TextBox}">Item #7</TextBox>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
